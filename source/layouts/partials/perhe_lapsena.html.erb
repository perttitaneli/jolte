<div class="well">
  <div class="row">
    <div class="col-lg-12">
      Isä:<br>
      <% isä = hae_koodilla isän_koodi(tämä_artikkeli) %>
      <% if isä %>
          <%= artikkelilinkki isä %>
          <br><br>

          <% aidit = puolisot isä %>

          <% aidit.each do |aiti| %>
              <div class="row">
                <div class="col-lg-6">
                  Äiti:<br>
                  <%= artikkelilinkki aiti %>
                </div>
                <div class="col-lg-6">
                  Sisarukset:<br>
                  <% lapset = lapset(isä, aiti) %>
                  <% lapset.each do |lapsi| %>
                      <% if lapsi == tämä_artikkeli %>
                          <span class="me"><%= henkilötiedot lapsi %></span>
                      <% else %>
                          <%= henkilötiedot lapsi %>
                      <% end %>
                      <br>
                  <% end %>
                </div>
              </div>
          <% end %>
      <% end %>

    </div>
  </div>
</div>